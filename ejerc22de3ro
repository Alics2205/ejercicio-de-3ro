#include<iostream>
#include <math.h>
using namespace std;

int main(){
	float suma,raiz_cuadrada,cubo,resta,multi,div,n1,n2,n3=3;
	char opcion;
	 cout<<"elegir A, B, C: ";
	 cin>>opcion;
	 
	 switch (opcion) {
	 	case 'a':
	 	case 'A':
	 		cout<<"Ingrese un numero: "<<endl;
	 		cin>>n1;
	 		raiz_cuadrada = sqrt(n1);
            cout<<"la raiz cuadrada de "<<n1<<" es: "<<raiz_cuadrada<<endl;
        break;
        
        case 'b':
        case 'B':
        	cout<<"ingrese un numero: "<<endl;
        	cin>>n1;
        	cout<<"ingrese otro numero: "<<endl;
        	cin>>n2;
        	suma=n1+n2;
        	cubo=pow(suma, n3);
            cout<<"la suma al cubo es:"<<cubo<<endl;
        break;
		
		case 'c':
		case 'C':
		    cout<<"ingrese un numero: "<<endl;
		    cin>>n1;
		    cout<<"ingrese otro numero: "<<endl;
		    cin>>n2;
		    suma=n1+n2;
		    cout<<"la suma es: "<<suma<<endl;
		    resta=n1-n2;
		    cout<<"la resta es: "<<resta<<endl;
		    multi=n1*n2;
		    cout<<"la multiplicacion es: "<<multi<<endl;
		    div=n1/n2;
		    
		    cout<<"la division es: "<<div<<endl;
		break;
		
		default:
			cout<<"que sos ALLISON";
		break;
			
	 }
		
}
